						Text="Calcyoulus v1.27.4"
						TextColor="{DynamicResource DarkAccent1}" />
					<material:MaterialLabel
						Margin="0,0,0,10"
						FontSize="18"
						HorizontalOptions="Center"
						HorizontalTextAlignment="Center"
						Text="Thanks to those who made this app possible through the following GitHub Repos!"
						TextColor="{DynamicResource DarkAccent1}" />

					<Grid>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<!--
							When clicked on, allows user to navigate to the corresponding
							GitHub Repo site for each project
						-->
						<material:MaterialCard
							x:Name="XFMaterialLibraryCreditMaterialCard"
							Grid.Column="0"
							BackgroundColor="#607d8b"
							Clicked="XFMaterialLibraryCreditMaterialCard_Clicked"
							CornerRadius="100"
							IsClickable="True">
							<StackLayout Orientation="Horizontal">
								<Image
									HeightRequest="48"
									Source="xf_material_logo.png"
									WidthRequest="48" />
								<material:MaterialLabel
									Text="XF.Material Library"
									TextColor="{DynamicResource LightAccent1}"
									VerticalOptions="Center" />
							</StackLayout>
						</material:MaterialCard>
						<material:MaterialCard
							x:Name="XamanimationCreditMaterialCard"
							Grid.Column="1"
							BackgroundColor="#0059d3"
							Clicked="XamanimationCreditMaterialCard_Clicked"
							CornerRadius="100"
							IsClickable="True">
							<StackLayout Orientation="Horizontal">
								<Image
									HeightRequest="48"
									Source="xamanimation_icon.png"
									WidthRequest="48" />
								<material:MaterialLabel
									FontSize="13"
									Text="Xamanimation"
									TextColor="{DynamicResource LightAccent1}"
									VerticalOptions="Center" />
							</StackLayout>
						</material:MaterialCard>

					</Grid>

				</StackLayout>

			</ScrollView>

		</StackLayout>

		<!--  Bottom Page Navigation Bar Grid  -->
		<Grid
			Grid.Row="1"
			Background="{DynamicResource LightAccent1}"
			ColumnSpacing="0"
			HorizontalOptions="Fill"
			VerticalOptions="End">

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="55" />
				<RowDefinition Height="*" />
				<RowDefinition Height="5" />
			</Grid.RowDefinitions>

			<!--  Universal Answer Grid  -->
			<Grid
				Grid.Row="0"
				Grid.Column="0"
				Grid.ColumnSpan="4">

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="60" />
					<ColumnDefinition Width="70" />
				</Grid.ColumnDefinitions>

				<!--  Calculation Answer Entry  -->
				<Entry
					x:Name="CalculationAnswerEntry"
					Grid.Column="0"
					Margin="10,0,0,0"
					BackgroundColor="{DynamicResource LightAccent1}"
					FontSize="22"
					HeightRequest="55"
					IsReadOnly="True"
					Placeholder="Answer"
					PlaceholderColor="{DynamicResource DarkAccent3}"
					TextChanged="CalculationAnswerEntry_TextChanged"
					TextColor="{DynamicResource DarkAccent1}" />

				<!--  Metric Units  -->
				<Picker
					x:Name="AnswerUnitPicker"
					Title="Unit"
					Grid.Column="1"
					BackgroundColor="{DynamicResource LightAccent1}"
					FontSize="22"
					HeightRequest="55"
					HorizontalTextAlignment="Center"
					IsVisible="False"
					ItemsSource="{DynamicResource UnitsPickerArray}"
					SelectedIndex="0"
					SelectedIndexChanged="AnswerUnitPicker_SelectedIndexChanged"
					TextColor="{DynamicResource DarkAccent1}"
					TitleColor="{DynamicResource DarkAccent3}" />

				<!--  Imperial Units  -->
				<Picker
					x:Name="ImperialAnswerUnitPicker"
					Title="Unit"
					Grid.Column="1"
					BackgroundColor="{DynamicResource LightAccent1}"
					FontSize="22"
					HeightRequest="55"
					HorizontalTextAlignment="Center"
					IsVisible="False"
					ItemsSource="{DynamicResource ImperialUnitsPickerArray}"
					SelectedIndex="0"
					SelectedIndexChanged="ImperialAnswerUnitPicker_SelectedIndexChanged"
					TextColor="{DynamicResource DarkAccent1}"
					TitleColor="{DynamicResource DarkAccent3}" />

				<ImageButton
					x:Name="ClearCalculatedAnswerEntryImageButton"
					Grid.Column="1"
					Padding="15"
					BackgroundColor="{DynamicResource LightAccent2}"
					Clicked="ClearCalculatedAnswerEntryImageButton_Clicked"
					CornerRadius="100"
					HorizontalOptions="Center"
					IsEnabled="False"
					Source="clear_96.png" />

				<ImageButton
					x:Name="CopyCalculatedAnswerImageButton"
					Grid.Column="2"
					Padding="15"
					BackgroundColor="{DynamicResource LightAccent2}"
					Clicked="CopyCalculatedAnswerImageButton_Clicked"
					CornerRadius="100"
					HorizontalOptions="Center"
					IsEnabled="False"
					Source="copy_96.png" />

			</Grid>

			<!--  Home Navigation Page ImageButton  -->
			<ImageButton
				x:Name="HomeNavigationPageImageButton"
				Grid.Row="1"
				Grid.Column="0"
				Padding="10"
				BackgroundColor="{DynamicResource LightAccent1}"
				Clicked="HomeNavigationPageImageButton_Clicked"
				CornerRadius="100"
				HeightRequest="55"
				HorizontalOptions="Fill"
				Source="home_96.png"
				VerticalOptions="Fill"
				WidthRequest="55" />
			<!--  Geometry-Related Calculators Navigation ImageButton  -->
			<ImageButton
				x:Name="GeometryCalculatorsNavigationImageButton"
				Grid.Row="1"
				Grid.Column="1"
				Padding="10"
				BackgroundColor="{DynamicResource LightAccent1}"
				Clicked="GeometryCalculatorsNavigationImageButton_Clicked"
				CornerRadius="100"
				HeightRequest="55"
				HorizontalOptions="Fill"
				Source="tesseract_96.png"
				VerticalOptions="Fill"
				WidthRequest="55" />
			<!--  Linear Relations-Related Calculators Navigation ImageButton  -->
			<ImageButton
				x:Name="LinearCalculatorsNavigationImageButton"
				Grid.Row="1"
				Grid.Column="2"
				Padding="10"
				BackgroundColor="{DynamicResource LightAccent1}"
				Clicked="LinearCalculatorsNavigationImageButton_Clicked"
				CornerRadius="100"
				HeightRequest="55"
				HorizontalOptions="Fill"
				Source="plot_96.png"
				VerticalOptions="Fill"
				WidthRequest="55" />
			<!--  Settings Page Navigation ImageButton  -->
			<ImageButton
				x:Name="SettingsNavigationImageButton"
				Grid.Row="1"
				Grid.Column="3"
				Padding="10"
				BackgroundColor="{DynamicResource LightAccent1}"
				Clicked="SettingsNavigationImageButton_Clicked"
				CornerRadius="100"
				HeightRequest="55"
				HorizontalOptions="Fill"
				Source="settings_96.png"
				VerticalOptions="Fill"
				WidthRequest="55" />

			<!--  Home Image Button Page Indicator Rectangle  -->
			<Rectangle
				x:Name="HomeImageButtonRectangle"
				Grid.Row="2"
				Grid.Column="0"
				Background="{DynamicResource GreenAccent1}"
				HeightRequest="5"
				HorizontalOptions="Center"
				VerticalOptions="End"
				WidthRequest="50" />
			<!--  Geometry-Related Calculators Page Indicator Rectangle  -->
			<Rectangle
				x:Name="GeometryCalculatorsImageButtonRectangle"
				Grid.Row="2"
				Grid.Column="1"
				Background="{DynamicResource GreenAccent1}"
				HeightRequest="5"
				HorizontalOptions="Center"
				IsVisible="False"
				VerticalOptions="End"
				WidthRequest="50" />
			<!--  Linear Relations-Related Calculators Page Indicator Rectangle  -->
			<Rectangle
				x:Name="LinearCalculatorsImageButtonRectangle"
				Grid.Row="2"
				Grid.Column="2"
				Background="{DynamicResource GreenAccent1}"
				HeightRequest="5"
				HorizontalOptions="Center"
				IsVisible="False"
				VerticalOptions="End"
				WidthRequest="50" />
			<!--  Settings Page Indicator Rectangle  -->
			<Rectangle
				x:Name="SettingsImageButtonRectangle"
				Grid.Row="2"
				Grid.Column="3"
				Background="{DynamicResource GreenAccent1}"
				HeightRequest="5"
				HorizontalOptions="Center"
				IsVisible="False"
				VerticalOptions="End"
				WidthRequest="50" />

		</Grid>

	</Grid>

	<!--  LOCAL APP RESOURCES  -->
	<ContentPage.Resources>

		<!--  COLORS  -->
		<Color x:Key="LightAccent1">#FFFFFF</Color>
		<Color x:Key="LightAccent2">#dedede</Color>

		<Color x:Key="DarkAccent1">#000000</Color>
		<Color x:Key="DarkAccent2">#f0f0f0</Color>
