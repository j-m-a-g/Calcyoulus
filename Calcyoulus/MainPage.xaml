<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Calcyoulus.MainPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
	xmlns:xamanimation="clr-namespace:Xamanimation;assembly=Xamanimation"
	BackgroundColor="{DynamicResource LightAccent1}">

	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="120" />
		</Grid.RowDefinitions>

		<StackLayout HorizontalOptions="Fill" VerticalOptions="Fill">

			<!--  Top App Bar Page MaterialLabel  -->
			<material:MaterialLabel
				x:Name="CurrentPageNameLabel"
				Padding="20"
				FontSize="20"
				HorizontalOptions="Fill"
				Text="Home"
				TextColor="{DynamicResource DarkAccent1}"
				VerticalOptions="Start" />

			<!--  Home Page ScrollView  -->
			<ScrollView
				x:Name="HomePageScrollView"
				Padding="10,0,10,0"
				HorizontalScrollBarVisibility="Default"
				VerticalScrollBarVisibility="Default">

				<StackLayout>

					<!--  Quick Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="QuickFormulasMaterialCard"
						BackgroundColor="{DynamicResource GreenAccent2}"
						Clicked="QuickFormulasMaterialCard_Clicked"
						CornerRadius="10"
						Elevation="0"
						IsClickable="True">

						<StackLayout Orientation="Horizontal">

							<material:MaterialLabel
								FontSize="18"
								HorizontalOptions="Start"
								Text="Quick Formulas"
								TextColor="{DynamicResource DarkAccent1}"
								VerticalOptions="Center" />
							<material:MaterialIcon
								x:Name="ExpandCollapseQuickFormulasMaterialIcon"
								BackgroundColor="Transparent"
								HeightRequest="24"
								HorizontalOptions="EndAndExpand"
								Source="expand_96.png"
								VerticalOptions="Center"
								WidthRequest="24" />

						</StackLayout>

					</material:MaterialCard>

					<!--  Area Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="AreaFormulasMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<StackLayout>

							<material:MaterialLabel
								FontAttributes="Bold"
								Text="AREA"
								TextColor="{DynamicResource DarkAccent1}" />

							<!--  Square  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Square" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = b²"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Rectangle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Rectangle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = lwh"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Parallelogram  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Parallelogram" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = bh"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Triangle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Triangle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = (bh) ÷ 2"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Trapezoid  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Trapezoid" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = ((a + b)h) ÷ 2"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Circle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Circle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = r²π"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>

						</StackLayout>

					</material:MaterialCard>

					<!--  Volume Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="VolumeFormulasMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<StackLayout>

							<material:MaterialLabel
								FontAttributes="Bold"
								Text="VOLUME"
								TextColor="{DynamicResource DarkAccent1}" />

							<!--  Cylinder  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Cylinder" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = r²hπ"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Sphere  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Sphere" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = (4r³π) ÷ 3"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Cone  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Cone" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = (r²hπ) ÷ 3"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Square-Based Pyramid  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Square-Based Pyramid" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = (b²h) ÷ 3"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Rectangular Prism  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Rectangular Prism" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = lwh"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Triangular Prism  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Triangular Prism" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = blh ÷ 2"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>

						</StackLayout>

					</material:MaterialCard>

					<!--  Surface Area Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="SurfaceAreaFormulasMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<StackLayout>

							<material:MaterialLabel
								FontAttributes="Bold"
								Text="SURFACE AREA"
								TextColor="{DynamicResource DarkAccent1}" />

							<!--  Cylinder  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Cylinder" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = 2r²π + 2rsπ"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Sphere  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Sphere" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = 4r²π"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Cone  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Cone" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = r²π + rsπ"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Square-Based Pyramid  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Square-Based Pyramid" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = b² + 2bs"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Rectangular Prism  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Rectangular Prism" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = 2(wh + lw + lh)"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Triangular Prism  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Triangular Prism" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = bl + ah + bh + ch"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>

						</StackLayout>

					</material:MaterialCard>

					<!--  Perimeter Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="PerimeterFormulasMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<StackLayout>

							<material:MaterialLabel
								FontAttributes="Bold"
								Text="PERIMETER"
								TextColor="{DynamicResource DarkAccent1}" />

							<!--  Square  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Square" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = 4b"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Rectangle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Rectangle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = 2(l+w)"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Parallelogram  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Parallelogram" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = (b + c)"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Triangle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Triangle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = a + b + c"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Trapezoid  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Trapezoid" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = a + b + c + d"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Circle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Circle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="C = dπ or C = 2rπ"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>

						</StackLayout>

					</material:MaterialCard>

					<!--  Unit Conversions MaterialCard  -->
					<material:MaterialCard
						x:Name="UnitConversionsMaterialCard"
						BackgroundColor="{DynamicResource GreenAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsClickable="True">

						<StackLayout Orientation="Horizontal">

							<material:MaterialLabel
								FontSize="18"
								HorizontalOptions="Start"
								Text="Unit Conversions"
								TextColor="{DynamicResource DarkAccent1}"
								VerticalOptions="Center" />
							<material:MaterialIcon
								x:Name="ExpandCollapseUnitConversionsMaterialIcon"
								BackgroundColor="Transparent"
								HeightRequest="24"
								HorizontalOptions="EndAndExpand"
								Source="expand_96.png"
								VerticalOptions="Center"
								WidthRequest="24" />

						</StackLayout>

					</material:MaterialCard>
					<material:MaterialCard
						x:Name="UnitConversionsExpandedMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="True">

						<material:MaterialCard CornerRadius="10">

							<StackLayout>

								<material:MaterialLabel
									FontAttributes="Bold"
									Text="LENGTH"
									TextColor="{DynamicResource DarkAccent1}" />

								<Grid>

									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="24" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>

									<Picker
										x:Name="FromUnitConversionsPicker"
										Title="From"
										Grid.Column="0"
										ItemsSource="{DynamicResource LengthUnitConversions}"
										TextColor="{DynamicResource DarkAccent1}"
										TitleColor="{DynamicResource DarkAccent3}" />
									<Image
										Grid.Column="1"
										HeightRequest="24"
										HorizontalOptions="Center"
										Source="double_right_96.png"
										VerticalOptions="Center"
										WidthRequest="24" />
									<Picker
										x:Name="ToUnitConversionsPicker"
										Title="To"
										Grid.Column="2"
										HorizontalTextAlignment="End"
										ItemsSource="{DynamicResource LengthUnitConversions}"
										TextColor="{DynamicResource DarkAccent1}"
										TitleColor="{DynamicResource DarkAccent3}" />

								</Grid>

								<material:MaterialTextField
									x:Name="LengthValueMaterialTextField"
									AlwaysShowUnderline="True"
									BackgroundColor="White"
									InputType="Numeric"
									Placeholder="Value"
									PlaceholderColor="{DynamicResource DarkAccent1}"
									TextChanged="LengthValueMaterialTextField_TextChanged"
									UnderlineColor="{DynamicResource GreenAccent1}" />

							</StackLayout>

						</material:MaterialCard>

					</material:MaterialCard>

				</StackLayout>

			</ScrollView>

			<!--  Geometry-Related Calculators Page ScrollView  -->
			<ScrollView
				x:Name="GeometryCalculatorsPageScrollView"
				Padding="10,0,10,0"
				HorizontalScrollBarVisibility="Default"
				IsVisible="False"
				VerticalScrollBarVisibility="Default">

				<StackLayout />

			</ScrollView>

			<!--  Linear Relations-Related Calculators Page ScrollView  -->
			<ScrollView
				x:Name="LinearCalculatorsScrollView"
				Padding="10,0,10,0"
				HorizontalScrollBarVisibility="Default"
				IsVisible="False"
				VerticalScrollBarVisibility="Default">

				<StackLayout />

			</ScrollView>

			<!--  Settings Page ScrollView  -->
			<ScrollView
				x:Name="SettingsPageScrollView"
				Padding="10,0,10,0"
				HorizontalScrollBarVisibility="Default"
				IsVisible="False"
				VerticalScrollBarVisibility="Default">

				<StackLayout>

					<material:MaterialLabel
						Margin="0,0,0,10"
						FontAttributes="Bold"
						FontSize="30"
						HorizontalOptions="Center"
						Text="About"
						TextColor="{DynamicResource DarkAccent1}" />
					<material:MaterialLabel
						Margin="0,0,0,10"
						FontSize="20"
						HorizontalOptions="Center"
						Text="Calcyoulus v1.26.4"
						TextColor="{DynamicResource DarkAccent1}" />

				</StackLayout>

			</ScrollView>

		</StackLayout>

		<!--  Bottom Page Navigation Bar Grid  -->
		<Grid
			Grid.Row="1"
			Background="{DynamicResource LightAccent1}"
			ColumnSpacing="0"
			HorizontalOptions="Fill"
			VerticalOptions="End">

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="55" />
				<RowDefinition Height="*" />
				<RowDefinition Height="5" />
			</Grid.RowDefinitions>

			<!--  Universal Answer Grid  -->
			<Grid
				Grid.Row="0"
				Grid.Column="0"
				Grid.ColumnSpan="4">

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="50" />
					<ColumnDefinition Width="70" />
				</Grid.ColumnDefinitions>

				<!--  Calculation Answer Entry  -->
				<Entry
					x:Name="CalculationAnswerEntry"
					Grid.Column="0"
					Margin="5,0,0,0"
					BackgroundColor="{DynamicResource LightAccent1}"
					HeightRequest="55"
					IsReadOnly="True"
					Placeholder="Answer"
					PlaceholderColor="{DynamicResource DarkAccent3}"
					TextChanged="CalculationAnswerEntry_TextChanged"
					TextColor="{DynamicResource DarkAccent1}" />

				<Picker
					x:Name="AnswerUnitPicker"
					Title="Unit"
					Grid.Column="1"
					BackgroundColor="{DynamicResource LightAccent1}"
					HeightRequest="55"
					HorizontalTextAlignment="Center"
					ItemsSource="{DynamicResource UnitsPickerArray}"
					SelectedIndex="0"
					SelectedIndexChanged="AnswerUnitPicker_SelectedIndexChanged"
					TextColor="{DynamicResource DarkAccent1}"
					TitleColor="{DynamicResource DarkAccent3}" />

				<ImageButton
					x:Name="CopyCalculatedAnswerImageButton"
					Grid.Column="2"
					Padding="15"
					BackgroundColor="{DynamicResource LightAccent2}"
					CornerRadius="100"
					HorizontalOptions="Center"
					IsEnabled="False"
					Source="copy_96.png" />

			</Grid>

			<!--  Home Navigation Page ImageButton  -->
			<ImageButton
				x:Name="HomeNavigationPageImageButton"
				Grid.Row="1"
				Grid.Column="0"
				Padding="10"
				BackgroundColor="{DynamicResource LightAccent1}"
				Clicked="HomeNavigationPageImageButton_Clicked"
				CornerRadius="100"
				HeightRequest="55"
				HorizontalOptions="Fill"
				Source="home_96.png"
				VerticalOptions="Fill"
				WidthRequest="55" />
			<!--  Geometry-Related Calculators Navigation ImageButton  -->
			<ImageButton
				x:Name="GeometryCalculatorsNavigationImageButton"
				Grid.Row="1"
				Grid.Column="1"
				Padding="10"
				BackgroundColor="{DynamicResource LightAccent1}"
				Clicked="GeometryCalculatorsNavigationImageButton_Clicked"
				CornerRadius="100"
				HeightRequest="55"
				HorizontalOptions="Fill"
				Source="tesseract_96.png"
				VerticalOptions="Fill"
				WidthRequest="55" />
			<!--  Linear Relations-Related Calculators Navigation ImageButton  -->
			<ImageButton
				x:Name="LinearCalculatorsNavigationImageButton"
				Grid.Row="1"
				Grid.Column="2"
				Padding="10"
				BackgroundColor="{DynamicResource LightAccent1}"
				Clicked="LinearCalculatorsNavigationImageButton_Clicked"
				CornerRadius="100"
				HeightRequest="55"
				HorizontalOptions="Fill"
				Source="plot_96.png"
				VerticalOptions="Fill"
				WidthRequest="55" />
			<!--  Settings Page Navigation ImageButton  -->
			<ImageButton
				x:Name="SettingsNavigationImageButton"
				Grid.Row="1"
				Grid.Column="3"
				Padding="10"
				BackgroundColor="{DynamicResource LightAccent1}"
				Clicked="SettingsNavigationImageButton_Clicked"
				CornerRadius="100"
				HeightRequest="55"
				HorizontalOptions="Fill"
				Source="settings_96.png"
				VerticalOptions="Fill"
				WidthRequest="55" />

			<!--  Home Image Button Page Indicator Rectangle  -->
			<Rectangle
				x:Name="HomeImageButtonRectangle"
				Grid.Row="2"
				Grid.Column="0"
				Background="{DynamicResource GreenAccent1}"
				HeightRequest="5"
				HorizontalOptions="Center"
				VerticalOptions="End"
				WidthRequest="50" />
			<!--  Geometry-Related Calculators Page Indicator Rectangle  -->
			<Rectangle
				x:Name="GeometryCalculatorsImageButtonRectangle"
				Grid.Row="2"
				Grid.Column="1"
				Background="{DynamicResource GreenAccent1}"
				HeightRequest="5"
				HorizontalOptions="Center"
				IsVisible="False"
				VerticalOptions="End"
				WidthRequest="50" />
			<!--  Linear Relations-Related Calculators Page Indicator Rectangle  -->
			<Rectangle
				x:Name="LinearCalculatorsImageButtonRectangle"
				Grid.Row="2"
				Grid.Column="2"
				Background="{DynamicResource GreenAccent1}"
				HeightRequest="5"
				HorizontalOptions="Center"
				IsVisible="False"
				VerticalOptions="End"
				WidthRequest="50" />
			<!--  Settings Page Indicator Rectangle  -->
			<Rectangle
				x:Name="SettingsImageButtonRectangle"
				Grid.Row="2"
				Grid.Column="3"
				Background="{DynamicResource GreenAccent1}"
				HeightRequest="5"
				HorizontalOptions="Center"
				IsVisible="False"
				VerticalOptions="End"
				WidthRequest="50" />

		</Grid>

	</Grid>

	<!--  LOCAL APP RESOURCES  -->
	<ContentPage.Resources>

		<!--  Colors  -->
		<Color x:Key="LightAccent1">#FFFFFF</Color>
		<Color x:Key="LightAccent2">#dedede</Color>
		
		<Color x:Key="DarkAccent1">#000000</Color>
		<Color x:Key="DarkAccent2">#f0f0f0</Color>
		<Color x:Key="DarkAccent3">#979797</Color>
		

		<Color x:Key="GreenAccent1">#61d800</Color>
		<Color x:Key="GreenAccent2">#defabb</Color>

		<!--  Arrays  -->
		<x:Array x:Key="UnitsPickerArray" Type="{x:Type x:String}">
			<x:String>None</x:String>
