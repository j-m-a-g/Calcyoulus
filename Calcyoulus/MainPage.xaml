			<x:String>Metric</x:String>
		</x:Array>

		<x:Array x:Key="SlopeOfLineChoicesArray" Type="{x:Type x:String}">
			<x:String>Two Points</x:String>
			<x:String>Point and Equation</x:String>
		</x:Array>

	</ContentPage.Resources>

</ContentPage>
