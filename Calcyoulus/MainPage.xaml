<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Calcyoulus.MainPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
	xmlns:xamanimation="clr-namespace:Xamanimation;assembly=Xamanimation"
	BackgroundColor="{DynamicResource LightAccent1}">

	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="120" />
		</Grid.RowDefinitions>

		<StackLayout HorizontalOptions="Fill" VerticalOptions="Fill">

			<!--  Top App Bar Page MaterialLabel  -->
			<material:MaterialLabel
				x:Name="CurrentPageNameLabel"
				Padding="20"
				FontSize="20"
				HorizontalOptions="Fill"
				Text="Home"
				TextColor="{DynamicResource DarkAccent1}"
				VerticalOptions="Start" />

			<!--  Home Page ScrollView  -->
			<ScrollView
				x:Name="HomePageScrollView"
				Padding="10,0,10,0"
				HorizontalScrollBarVisibility="Default"
				VerticalScrollBarVisibility="Default">

				<StackLayout>

					<!--  Quick Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="QuickFormulasMaterialCard"
						BackgroundColor="{DynamicResource GreenAccent2}"
						Clicked="QuickFormulasMaterialCard_Clicked"
						CornerRadius="10"
						Elevation="0"
						IsClickable="True">

						<StackLayout Orientation="Horizontal">

							<material:MaterialIcon
								Margin="0,0,5,0"
								HeightRequest="24"
								Source="pi_96.png"
								WidthRequest="24" />
							<material:MaterialLabel
								FontSize="18"
								HorizontalOptions="Start"
								Text="Quick Formulas"
								TextColor="{DynamicResource DarkAccent1}"
								VerticalOptions="Center" />
							<material:MaterialIcon
								x:Name="ExpandCollapseQuickFormulasMaterialIcon"
								BackgroundColor="Transparent"
								HeightRequest="24"
								HorizontalOptions="EndAndExpand"
								Source="expand_96.png"
								VerticalOptions="Center"
								WidthRequest="24" />

						</StackLayout>

					</material:MaterialCard>

					<!--  Area Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="AreaFormulasMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<StackLayout>

							<material:MaterialLabel
								FontAttributes="Bold"
								FontSize="16"
								Text="AREA"
								TextColor="{DynamicResource DarkAccent1}" />

							<!--  Square  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Square" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = b²"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Rectangle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Rectangle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = lwh"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Parallelogram  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Parallelogram" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = bh"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Triangle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Triangle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = (bh) ÷ 2"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Trapezoid  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Trapezoid" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = ((a + b)h) ÷ 2"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Circle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Circle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="A = r²π"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>

						</StackLayout>

					</material:MaterialCard>

					<!--  Volume Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="VolumeFormulasMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<StackLayout>

							<material:MaterialLabel
								FontAttributes="Bold"
								FontSize="16"
								Text="VOLUME"
								TextColor="{DynamicResource DarkAccent1}" />

							<!--  Cylinder  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Cylinder" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = r²hπ"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Sphere  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Sphere" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = (4r³π) ÷ 3"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Cone  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Cone" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = (r²hπ) ÷ 3"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Square-Based Pyramid  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Square-Based Pyramid" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = (b²h) ÷ 3"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Rectangular Prism  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Rectangular Prism" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = lwh"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Triangular Prism  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Triangular Prism" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="V = blh ÷ 2"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>

						</StackLayout>

					</material:MaterialCard>

					<!--  Surface Area Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="SurfaceAreaFormulasMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<StackLayout>

							<material:MaterialLabel
								FontAttributes="Bold"
								FontSize="16"
								Text="SURFACE AREA"
								TextColor="{DynamicResource DarkAccent1}" />

							<!--  Cylinder  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Cylinder" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = 2r²π + 2rsπ"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Sphere  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Sphere" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = 4r²π"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Cone  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Cone" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = r²π + rsπ"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Square-Based Pyramid  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Square-Based Pyramid" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = b² + 2bs"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Rectangular Prism  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Rectangular Prism" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = 2(wh + lw + lh)"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Triangular Prism  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Triangular Prism" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="SA = bl + ah + bh + ch"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>

						</StackLayout>

					</material:MaterialCard>

					<!--  Perimeter Formulas MaterialCard  -->
					<material:MaterialCard
						x:Name="PerimeterFormulasMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<StackLayout>

							<material:MaterialLabel
								FontAttributes="Bold"
								FontSize="16"
								Text="PERIMETER"
								TextColor="{DynamicResource DarkAccent1}" />

							<!--  Square  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Square" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = 4b"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Rectangle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Rectangle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = 2(l+w)"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Parallelogram  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Parallelogram" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = (b + c)"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Triangle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Triangle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = a + b + c"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Trapezoid  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Trapezoid" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="P = a + b + c + d"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>
							<!--  Circle  -->
							<material:MaterialCard CornerRadius="10" Elevation="1">
								<StackLayout>
									<material:MaterialLabel Text="Circle" TextColor="{DynamicResource DarkAccent1}" />
									<material:MaterialLabel
										FontAttributes="Italic"
										FontSize="16"
										Text="C = dπ or C = 2rπ"
										TextColor="{DynamicResource DarkAccent1}" />
								</StackLayout>
							</material:MaterialCard>

						</StackLayout>

					</material:MaterialCard>

					<!--  Unit Conversions MaterialCard  -->
					<material:MaterialCard
						x:Name="UnitConversionsMaterialCard"
						BackgroundColor="{DynamicResource GreenAccent2}"
						Clicked="UnitConversionsMaterialCard_Clicked"
						CornerRadius="10"
						Elevation="0"
						IsClickable="True">

						<StackLayout Orientation="Horizontal">

							<material:MaterialIcon
								Margin="0,0,5,0"
								HeightRequest="24"
								Source="unit_96.png"
								WidthRequest="24" />
							<material:MaterialLabel
								FontSize="18"
								HorizontalOptions="Start"
								Text="Unit Conversions"
								TextColor="{DynamicResource DarkAccent1}"
								VerticalOptions="Center" />
							<material:MaterialIcon
								x:Name="ExpandCollapseUnitConversionsMaterialIcon"
								BackgroundColor="Transparent"
								HeightRequest="24"
								HorizontalOptions="EndAndExpand"
								Source="expand_96.png"
								VerticalOptions="Center"
								WidthRequest="24" />

						</StackLayout>

					</material:MaterialCard>
					<material:MaterialCard
						x:Name="UnitConversionsExpandedMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<material:MaterialCard CornerRadius="10">

							<StackLayout>

								<!--  Length Unit Conversions  -->
								<material:MaterialLabel
									FontAttributes="Bold"
									FontSize="16"
									Text="📏  LENGTH"
									TextColor="{DynamicResource DarkAccent1}" />

								<Grid>

									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="24" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>

									<Picker
										x:Name="FromUnitConversionsPicker"
										Title="From"
										Grid.Column="0"
										ItemsSource="{DynamicResource LengthUnitConversions}"
										TextColor="{DynamicResource DarkAccent1}"
										TitleColor="{DynamicResource DarkAccent3}" />
									<Image
										Grid.Column="1"
										HeightRequest="24"
										HorizontalOptions="Center"
										Source="double_right_96.png"
										VerticalOptions="Center"
										WidthRequest="24" />
									<Picker
										x:Name="ToUnitConversionsPicker"
										Title="To"
										Grid.Column="2"
										HorizontalTextAlignment="End"
										ItemsSource="{DynamicResource LengthUnitConversions}"
										TextColor="{DynamicResource DarkAccent1}"
										TitleColor="{DynamicResource DarkAccent3}" />

								</Grid>

								<material:MaterialTextField
									x:Name="LengthValueMaterialTextField"
									AlwaysShowUnderline="True"
									BackgroundColor="White"
									InputType="Numeric"
									Placeholder="Value"
									PlaceholderColor="{DynamicResource DarkAccent1}"
									TextChanged="LengthValueMaterialTextField_TextChanged"
									UnderlineColor="{DynamicResource GreenAccent1}" />


								<!--  Area Unit Conversions  -->
								<material:MaterialLabel
									Margin="0,20,0,0"
									FontAttributes="Bold"
									FontSize="16"
									Text="🟦  AREA"
									TextColor="{DynamicResource DarkAccent1}" />

								<Grid>

									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="24" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>

									<Picker
										x:Name="FromAreaUnitConversionsPicker"
										Title="From"
										Grid.Column="0"
										ItemsSource="{DynamicResource AreaUnitConversions}"
										TextColor="{DynamicResource DarkAccent1}"
										TitleColor="{DynamicResource DarkAccent3}" />
									<Image
										Grid.Column="1"
										HeightRequest="24"
										HorizontalOptions="Center"
										Source="double_right_96.png"
										VerticalOptions="Center"
										WidthRequest="24" />
									<Picker
										x:Name="ToAreaUnitConversionsPicker"
										Title="To"
										Grid.Column="2"
										HorizontalTextAlignment="End"
										ItemsSource="{DynamicResource AreaUnitConversions}"
										TextColor="{DynamicResource DarkAccent1}"
										TitleColor="{DynamicResource DarkAccent3}" />

								</Grid>

								<material:MaterialTextField
									x:Name="AreaValueMaterialTextField"
									AlwaysShowUnderline="True"
									BackgroundColor="White"
									InputType="Numeric"
									Placeholder="Value"
									PlaceholderColor="{DynamicResource DarkAccent1}"
									TextChanged="AreaValueMaterialTextField_TextChanged"
									UnderlineColor="{DynamicResource GreenAccent1}" />

								<!--  Volume Unit Conversions  -->
								<material:MaterialLabel
									Margin="0,20,0,0"
									FontAttributes="Bold"
									FontSize="16"
									Text="📐  VOLUME"
									TextColor="{DynamicResource DarkAccent1}" />

								<Grid>

									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="24" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>

									<Picker
										x:Name="FromVolumeUnitConversionsPicker"
										Title="From"
										Grid.Column="0"
										ItemsSource="{DynamicResource VolumeUnitConversions}"
										TextColor="{DynamicResource DarkAccent1}"
										TitleColor="{DynamicResource DarkAccent3}" />
									<Image
										Grid.Column="1"
										HeightRequest="24"
										HorizontalOptions="Center"
										Source="double_right_96.png"
										VerticalOptions="Center"
										WidthRequest="24" />
									<Picker
										x:Name="ToVolumeUnitConversionsPicker"
										Title="To"
										Grid.Column="2"
										HorizontalTextAlignment="End"
										ItemsSource="{DynamicResource VolumeUnitConversions}"
										TextColor="{DynamicResource DarkAccent1}"
										TitleColor="{DynamicResource DarkAccent3}" />

								</Grid>

								<material:MaterialTextField
									x:Name="VolumeValueMaterialTextField"
									AlwaysShowUnderline="True"
									BackgroundColor="White"
									InputType="Numeric"
									Placeholder="Value"
									PlaceholderColor="{DynamicResource DarkAccent1}"
									UnderlineColor="{DynamicResource GreenAccent1}" />

							</StackLayout>

						</material:MaterialCard>

					</material:MaterialCard>

					<!--  Date Difference MaterialCard  -->
					<material:MaterialCard
						x:Name="DateDifferenceMaterialCard"
						BackgroundColor="{DynamicResource GreenAccent2}"
						Clicked="DateDifferenceMaterialCard_Clicked"
						CornerRadius="10"
						Elevation="0"
						IsClickable="True">

						<StackLayout Orientation="Horizontal">

							<material:MaterialIcon
								Margin="0,0,5,0"
								HeightRequest="24"
								Source="schedule_96.png"
								WidthRequest="24" />
							<material:MaterialLabel
								FontSize="18"
								HorizontalOptions="Start"
								Text="Date Difference"
								TextColor="{DynamicResource DarkAccent1}"
								VerticalOptions="Center" />
							<material:MaterialIcon
								x:Name="ExpandCollapseDateDifferenceMaterialIcon"
								BackgroundColor="Transparent"
								HeightRequest="24"
								HorizontalOptions="EndAndExpand"
								Source="expand_96.png"
								VerticalOptions="Center"
								WidthRequest="24" />

						</StackLayout>

					</material:MaterialCard>
					<material:MaterialCard
						x:Name="DateDifferenceExpandedMaterialCard"
						BorderColor="{DynamicResource DarkAccent2}"
						CornerRadius="10"
						Elevation="0"
						IsVisible="False">

						<Grid>

							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>

							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
								<RowDefinition Height="*" />
								<RowDefinition Height="*" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<material:MaterialLabel
								Grid.ColumnSpan="2"
								FontSize="16"
								Text="Include a specific time for each date"
								TextColor="{DynamicResource DarkAccent1}"
								VerticalOptions="Center" />
							<material:MaterialSwitch
								x:Name="IncludeSpecificTimeForDateMaterialSwitch"
								Grid.Column="1"
								Activated="IncludeSpecificTimeForDateMaterialSwitch_Activated"
								ActiveThumbColor="{DynamicResource GreenAccent1}"
								ActiveTrackColor="{DynamicResource GreenAccent2}"
								HorizontalOptions="End" />

							<!--  First Date and Time Pair  -->
							<material:MaterialDatePicker
								x:Name="FirstMaterialDatePicker"
								Grid.Row="1"
								Grid.Column="0"
								BackgroundColor="{DynamicResource LightAccent1}"
								Date="2024/01/01"
								TextColor="{DynamicResource DarkAccent1}" />
							<material:MaterialTimePicker
								x:Name="FirstDatePairMaterialTimePicker"
								Grid.Row="1"
								Grid.Column="1"
								BackgroundColor="{DynamicResource LightAccent1}"
								IsEnabled="False"
								TextColor="{DynamicResource DarkAccent1}" />
							<Image
								Grid.Row="2"
								Grid.Column="0"
								Grid.ColumnSpan="2"
								HeightRequest="48"
								HorizontalOptions="Center"
								Source="swap_96.png"
								WidthRequest="48" />

							<!--  Second Date and Time Pair  -->
							<material:MaterialDatePicker
								x:Name="SecondMaterialDatePicker"
								Grid.Row="3"
								Grid.Column="0"
								BackgroundColor="{DynamicResource LightAccent1}"
								Date="2024/01/01"
								TextColor="{DynamicResource DarkAccent1}" />
							<material:MaterialTimePicker
								x:Name="SecondDatePairMaterialTimePicker"
								Grid.Row="3"
								Grid.Column="1"
								BackgroundColor="{DynamicResource LightAccent1}"
								IsEnabled="False"
								TextColor="{DynamicResource DarkAccent1}" />

							<material:MaterialCard
								x:Name="FindDateDifferenceMaterialCard"
								Grid.Row="4"
								Grid.Column="0"
								Grid.ColumnSpan="2"
								Margin="0,10,0,0"
								BackgroundColor="{DynamicResource GreenAccent1}"
